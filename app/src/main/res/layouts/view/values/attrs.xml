<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- WaterfallScrollView -->
    <declare-styleable name="WaterfallScrollView">
        <!-- maximum number of LinearLayout, default 2 -->
        <attr name="linearMax" format="integer" />
        <!-- bottom view for custom use, default gone  -->
        <attr name="bottomView" format="reference" />
    </declare-styleable>

    <!-- WaterfallCardViewItem -->
    <declare-styleable name="WaterfallCardViewItem">
        <attr name="title" />
        <attr name="subTitle" />
        <attr name="banner" />
    </declare-styleable>

    <!-- general attr usage -->
    <attr name="title" format="string" />
    <attr name="subTitle" format="string" />
    <attr name="banner" format="reference" />
</resources>